@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Milk API Manager</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudNavMenu>
            <MudText Typo="Typo.h6" Class="px-4 py-2">Management</MudText>
            <MudNavLink Href="/apis" Icon="@Icons.Material.Filled.List">API Inventory</MudNavLink>
            <MudNavLink Href="/blacklist" Icon="@Icons.Material.Filled.Block">IP Blacklist</MudNavLink>
            <MudNavLink Href="/api-inventory" Icon="@Icons.Material.Filled.Security">Compliance Inventory</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
